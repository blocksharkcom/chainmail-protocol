{
  "name": "chainmail-protocol",
  "version": "1.0.0",
  "description": "Chainmail Protocol - Blockchain email with P2P encryption, end-to-end security, and zero central servers",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "chainmail": "./src/cli/index.js"
  },
  "scripts": {
    "start": "node src/server/secure-server.js",
    "server": "node src/server/secure-server.js",
    "server:insecure": "node src/server/index.js",
    "relay": "node src/network/relay-node.js",
    "gateway": "node src/gateway/index.js",
    "cli": "node src/cli/index.js",
    "dev": "concurrently \"npm run server\" \"cd web && npm run dev\"",
    "build": "cd web && npm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test": "node --test src/**/*.test.js"
  },
  "dependencies": {
    "@chainsafe/libp2p-noise": "^16.0.0",
    "@chainsafe/libp2p-yamux": "^7.0.0",
    "@libp2p/bootstrap": "^11.0.0",
    "@libp2p/floodsub": "^11.0.0",
    "@libp2p/identify": "^4.0.0",
    "@libp2p/mdns": "^11.0.0",
    "@libp2p/tcp": "^10.0.0",
    "@libp2p/websockets": "^9.0.0",
    "@libp2p/kad-dht": "^14.0.0",
    "@chainsafe/libp2p-gossipsub": "^14.0.0",
    "@libp2p/ping": "^2.0.0",
    "@noble/ciphers": "^0.5.3",
    "@noble/curves": "^1.3.0",
    "@noble/ed25519": "^2.0.0",
    "@noble/hashes": "^1.3.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "cors": "^2.8.6",
    "ethers": "^6.16.0",
    "express": "^5.2.1",
    "inquirer": "^9.2.0",
    "it-length-prefixed": "^9.0.0",
    "it-pipe": "^3.0.0",
    "level": "^8.0.0",
    "libp2p": "^2.5.0",
    "mailparser": "^3.9.3",
    "@multiformats/multiaddr": "^12.0.0",
    "multiformats": "^13.0.0",
    "nodemailer": "^8.0.0",
    "smtp-server": "^3.18.1",
    "uint8arrays": "^5.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
